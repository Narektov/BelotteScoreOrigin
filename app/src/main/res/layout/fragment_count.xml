<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:background="@android:color/holo_blue_light" android:orientation="vertical" android:weightSum="1"
              tools:context=".CountFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_horizontal" android:layout_marginRight="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_fragment_toldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:gravity="center" android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <EditText
            android:id="@+id/editText_hanac"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:ems="10" android:gravity="center" android:hint="հանած"
            android:inputType="number"/>
        <CheckBox
            android:id="@+id/checkBox_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" android:gravity="center"
            android:text="Բոյ"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Քուանշ"
                android:id="@+id/radioButton_quansh" android:checked="false"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="սուր"
                android:id="@+id/radioButton_sur" android:checked="false"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal" android:layout_marginRight="3dp"
        android:layout_weight="0.45" android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_drsicMenq" android:layout_weight="1" android:hint="Դրսից Մենք"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_drsicDuq" android:layout_weight="1" android:hint="Դրսից Դուք"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:orientation="horizontal">
        <Button
            android:id="@+id/button_tak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:text="տակ"/>
        <Button
            android:id="@+id/button_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:text="հաշվել"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:text="հետ"/>

</LinearLayout>
